# 1. Use official OpenJDK image
FROM openjdk:17-jdk-slim

# 2. Set working directory
WORKDIR /app

# 3. Copy Maven wrapper & pom.xml
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# 4. Download dependencies (cached layer)
RUN ./mvnw dependency:go-offline

# 5. Copy source code
COPY src ./src

# 6. Build the application
RUN ./mvnw clean package -DskipTests

# 7. Run the application
CMD ["java", "-jar", "target/report-0.0.1-SNAPSHOT.jar"]
